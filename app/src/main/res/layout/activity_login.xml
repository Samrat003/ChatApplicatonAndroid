<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f1e6"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/login_photo" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_image"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/inputs"
                android:padding="5dp"
                android:drawableStart="@drawable/email"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="17dp"/>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_email"
                android:hint="Enter Your Password"
                android:inputType="textPassword"
                android:background="@drawable/inputs"
                android:padding="5dp"
                android:drawableStart="@drawable/password"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="17dp"/>

            <TextView
                android:id="@+id/forget_password_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Forget Password ?"
                android:layout_below="@+id/login_password"
                android:layout_marginTop="2dp"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#999796"
                android:layout_marginHorizontal="17dp"/>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forget_password_link"
                android:layout_marginHorizontal="17dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttons"
                android:padding="4dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/need_new_account_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Need an account ?"
                android:layout_below="@+id/login_button"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#f7714f"
                android:layout_marginHorizontal="17dp"/>

            <TextView
                android:id="@+id/login_using"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="or Login Using Your"
                android:layout_below="@+id/need_new_account_link"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="17dp"/>

            <Button
                android:id="@+id/phone_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_using"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="17dp"
                android:layout_marginEnd="110dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttons"
                android:padding="15dp"
                android:text="Phone Number"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>